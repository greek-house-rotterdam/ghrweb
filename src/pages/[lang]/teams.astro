---
import Layout from "../../layouts/Layout.astro";
import { t } from "../../i18n/ui";
import { getStaticLangPaths, type Lang } from "../../i18n/utils";

export const getStaticPaths = getStaticLangPaths;

const { lang } = Astro.params as { lang: Lang };
---

<Layout title={t(lang, "nav.teams")} lang={lang}>
  <section class="py-12">
    <div class="mx-auto max-w-7xl px-4">
      <h1 class="text-3xl font-bold text-gray-900">{t(lang, "nav.teams")}</h1>
      <!-- TODO: Add team cards (dance, Dutch classes, art, meetings, etc.) -->
      <p class="mt-4 text-gray-600">Teams content coming soon.</p>
    </div>
  </section>
</Layout>
