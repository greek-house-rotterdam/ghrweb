---
import Layout from "../../layouts/Layout.astro";
import { t } from "../../i18n/ui";
import { getStaticLangPaths, type Lang } from "../../i18n/utils";

export const getStaticPaths = getStaticLangPaths;

const { lang } = Astro.params as { lang: Lang };
---

<Layout title={t(lang, "nav.history")} lang={lang}>
  <section class="py-12">
    <div class="mx-auto max-w-3xl px-4">
      <h1 class="text-3xl font-bold text-gray-900">{t(lang, "nav.history")}</h1>
      <p class="mt-4 text-gray-600">
        <!-- TODO: Add historical timeline content -->
        80+ years of Greek House in Rotterdam.
      </p>
    </div>
  </section>
</Layout>
