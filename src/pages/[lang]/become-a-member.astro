    <div class="mx-auto max-w-3xl px-4">
      <h1 class="text-3xl font-bold text-gray-900">{t(lang, "nav.become-a-member")}</h1>
      <p class="mt-4 text-gray-600">
        <!-- TODO: Add enrollment info and embedded Google Form -->
        Enrollment form coming soon.
      </p>
    </div>
  </section>
</Layout>
